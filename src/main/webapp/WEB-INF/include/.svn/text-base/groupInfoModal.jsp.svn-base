<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>
	<!-- modal框 -->
	<div class="container">
		<div id="groupInfoModal" class="modal fade in"
			style="display: none;">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">						 
						<button type="button" class="close" data-dismiss="modal"
							aria-hidden="true">&times;</button>
						<h4 class="modal-title" id="groupInfoModalLabel">群组信息</h4>
						<label></label>			 
					</div>
					<div class="modal-body" style="max-height: 300px">
						<div>
							<button id="addMemBtn" class="btn btn-primary" style="margin: auto 5px;">增加成员</button>	
							<button id="kickMemBtn" class="btn btn-danger" style="margin: auto 5px;">移除成员</button>
						</div> 
						<form style="background: #DDFFFF;padding: 5px 0;
								height :260px;border: 1px solid #ccc;max-height: 260px;overflow-y: auto;">
							<h5 class="text-center" style="margin: 0;font-weight: 600;margin-top: 0">所有群组成员</h5>
							<div id="grpInfo_selectAll" style="text-align: left;width: 100%;">
								<input style="text-align: left;" class="col-xs-1" type="checkbox"/>
								<label>&nbsp;全选</label>
							</div>
							<ul class="list-group">
							</ul>
						</form>
					</div>					 
					<div class="modal-footer">  
						<button id="dissolveGrpBtn"  class="btn btn-danger" type="button">解散群组</button>					         
					</div>					     
				</div>
			</div>
		</div>
	</div>
</body>
</html>