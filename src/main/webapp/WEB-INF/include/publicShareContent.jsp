<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>
	<div id="publicShareContent" style="display: none" class="row">
		<div class="col-lg-12">
			<div class="row">
				<div class="col-lg-12">
					<ol class="breadcrumb">
						<li><a href="#"><i class="fa fa-home"></i>主页</a></li>
						<li class="active"><span>公共共享</span></li>
					</ol>
					<h2>公共共享</h2>
				</div>
			</div>
			<!-- 我的共享表 -->
			<div id="publicShareTab" class="row">
				<div class="col-lg-12">
					<div class="main-box clearfix">
						<header class="main-box-header clearfix">
							<div id="div_cancelShare" class="col-xs-1" style="float: left; display:none;">
								<button id="btn_cancelShare" type="button" class="btn btn-primary">
									取&nbsp;消&nbsp;共&nbsp;享</button>
							</div>
							<div id="div_download" class="col-xs-1 btnClass">
								<button id="btn_download" type="button" class="btn btn-primary">
									下&nbsp;&nbsp;载</button>
							</div>
							<div id="div_preview" class="col-xs-1 btnClass">
								<button id="btn_preview" type="button" class="btn btn-primary">
									预&nbsp;&nbsp;览</button>
							</div>
							<div class="filter-block pull-right">
								<div class="form-group pull-left">
									<input type="text" class="form-control" placeholder="搜索...">
									<i class="fa fa-search search-icon"></i>
								</div>
								<a href="#" id="refreshTable" class="btn btn-primary pull-right">
									<i class="fa fa-refresh fa-lg"></i> 刷新
								</a>
							</div>
						</header>
						<div class="main-box-body clearfix" style="margin-top: -10px">
							<div id="toolbarShare">
								
							</div>
							<div class="table-responsive clearfix">
								<table class="table table-striped table-hover"
									id="tb_publicSharedFileInfo"></table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>